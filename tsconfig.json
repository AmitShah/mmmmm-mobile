{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "jsx": "react-native",
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es2015",
    "outDir": "./lib",
    "lib": ["dom", "es5", "scripthost", "es2015"]
  },
  "files": [
    "src/main.ts",
    "src/drivers/ssb.ts",
    "src/typings/react-native-simple-markdown.d.ts",
    "src/typings/rn-viewpager.d.ts"
  ],
  "exclude": ["node_modules"]
}
